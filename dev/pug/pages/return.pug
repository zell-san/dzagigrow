extends ../layout/main

block variables
    - var title = 'Возврат товара'
    - var pageClass = 'return-page'

block content

    .container-fluid.return__banner
        .container.page.return__banner-block
            .return__banner-box
                .return__banner-box-title Вернуть товар - просто!
                .return__banner-box-descr <br>Если в вашем заказе обнаружился брак, вы можете его легко вернуть и получить деньги обратно.
            img.return__banner-img(src="static/img/content/package.png")
    .container-fluid
        .container
            .return
                .return__descr
                    p.return__descr-p Как вернуть товар
                    p Вернуть товар в магазине DzagiGrow очень просто. Вам необходимо заполнить форму и прикрепить необходимые документы, после чего с вами свяжется менеджер магазина.
                    p Ознакомьтесь с подробной инструкцией по возврату товара ниже.
                .return__instruction
                    .return__instruction-box
                        +icon('note', 'instruction-return')
                        p.return__instruction-box-p Оформите заявку<br>на сайте
                    .return__instruction-box
                        +icon('clock', 'instruction-return')
                        p.return__instruction-box-p Дождитесь, пока с вами<br>свяжется менеджер
                    .return__instruction-box
                        +icon('moto', 'instruction-return')
                        p.return__instruction-box-p Верните товар<br>и получите деньги
                .return__form
                    .return__form-table
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Причина обращения*
                            .return__form-table-col-right
                                .return__form-table-col-select
                                    a.return__slct(href="javascript:void(0);") Выберите один из вариантов
                                    ul.return__slct-drop
                                        li.return__slct-drop-li
                                            a.return__slct-drop-li-a(href="javascript:void(0);") 1
                                        li.return__slct-drop-li
                                            a.return__slct-drop-li-a(href="javascript:void(0);") 2
                                        li.return__slct-drop-li
                                            a.return__slct-drop-li-a(href="javascript:void(0);") 3
                                        li.return__slct-drop-li
                                            a.return__slct-drop-li-a(href="javascript:void(0);") 4
                                    +icon('arrow-point', 'arrow-point-return')
                                    input(type="hidden" id="select")
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Имя*
                            .return__form-table-col-right
                                .return__form-table-col-select
                                    input.return__form-table-col-input(href="javascript:void(0);" placeholder="Напишите ваше имя")
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Номер заказа*
                            .return__form-table-col-right
                                .return__form-table-col-select
                                    input.return__form-table-col-input(href="javascript:void(0);" placeholder="Например 12345678")
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Контактные данные*
                            .return__form-table-col-right
                                .return__form-table-col-select
                                    input.return__form-table-col-input(href="javascript:void(0);" placeholder="Телефон или электронная почта")
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Описание проблемы*
                            .return__form-table-col-right
                                .return__form-table-col-select
                                    input.return__form-table-col-input(href="javascript:void(0);" placeholder="Описание вашей проблемы")
                        .return__form-table-row
                            .return__form-table-col
                                p.return__form-table-col-p Картинки проблемы*
                            .return__form-table-col-right

                    .return__form-picture
                        .return__form-picture-item
                            +icon ('upload', 'upload-return')
                            button.return__upload Загрузить
                        .return__form-picture-item
