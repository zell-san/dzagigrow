.teaser
  display flex
  width 100%
  justify-content space-between

  @media screen and (max-width desktopWidth)
    flex-wrap wrap

    @media screen and (max-width tableWidth)
      display none

  &__big
    min-width 630px
    max-width 630px
    max-height 385px
    min-height 385px
    margin 15px 0 0 15px
    position relative
    overflow hidden
    display flex

    @media screen and (max-width desktopWidth)
      min-width 585px
      max-width 100%
      min-height 350px

      @media screen and (max-width smalDesktopWidth)
        margin-left 0
        width 100%
        max-height 450px
        margin-top 40px

    &-img
      cursor pointer
      width auto
      transition: all 1s ease-out
      height 100%

      @media screen and (max-width smalDesktopWidth)
        width 100%

      &:hover
        transform scale(1.1)

    &-button
      font-weight bold
      background-color yellowDG
      border-radius 5px
      font-size 30px
      size (275px 55px)
      border none
      position (absolute none none 7% 7%)
      cursor pointer
      display: flex;
      align-items: center;
      justify-content: center;

      @media screen and (max-width bigPhoneWidth)
        size (184px 30px)
        font-size rem(14px)

        @media screen and (max-width smallPhoneWidth)
          width 140px
          font-size rem(18px)

  &__small
    display flex
    flex-wrap wrap
    width 100%

    @media screen and (max-width desktopWidth)
      flex-wrap nowrap

    &-right
      overflow hidden
      margin 15px 0 0 15px
      position relative
      max-width 310px
      min-width 310px
      max-height 185px
      min-height 185px

      @media screen and (max-width desktopWidth)
        min-width auto
        min-height auto
        max-width 285px

      @media screen and (max-width smalDesktopWidth)
        width 50%
        height 100%
        max-width 350px
        max-height 205px

      &:first-child
        @media screen and (max-width smalDesktopWidth)
          margin-left 0

      &-img
        cursor pointer
        transition: all 1s ease-out
        width: auto
        height: 100%

        @media screen and (max-width smalDesktopWidth)
          width 100%

        &:hover
          transform scale(1.1)

      &-button
        font-weight bold
        background-color white
        border-radius 5px
        border none
        position (absolute none none 15% 50%)
        cursor pointer
        color greenDGdark
        size (140px 30px)
        margin-left -70px
        display: flex;
        align-items: center;
        justify-content: center;

        @media screen and (max-width tableWidth)
          size (200px 45px)
          margin-left -100px
          font-size rem(18px)

          @media screen and (max-width bigPhoneWidth)
            size (140px 30px)
            margin-left -70px
            font-size rem(18px)

            @media screen and (max-width smallPhoneWidth)
              font-size rem(18px)

        &-bottom
          font-weight bold
          background-color white
          border-radius 5px
          border none
          position (absolute none none 15% 50%)
          cursor pointer
          size (190px 30px)
          margin-left -95px
          font-stretch condensed
          color black
          display: flex;
          align-items: center;
          justify-content: center;


          @media screen and (max-width tableWidth)
            size (270px 45px)
            margin-left -135px
            font-size rem(18px)

            @media screen and (max-width bigPhoneWidth)
              size (210px 30px)
              margin-left -105px
              font-size rem(14px)

              @media screen and (max-width smallPhoneWidth)
                font-size rem(18px)

  &__a
    width 100%
    height 100%
    justify-content center
    display flex