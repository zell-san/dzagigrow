.result
  &__filter
    padding-left 15px

    @media screen and (max-width bigPhoneWidth)
      padding-left 0

    &-a
      padding 0 15px
      color greyTextDGdark

      @media screen and (max-width bigPhoneWidth)
        padding 0 8px

      &-first
        @media screen and (max-width tableWidth)
          padding-left 0

      &:hover
        color blackTextDG

    &-span
      display none

      @media screen and (max-width tableWidth)
        display flex
        margin-top 5px


  &__product
    display flex
    flex-wrap wrap

    &-item
      @extend .products__teaser-item

      &:nth-child(4n+1)
        padding-left 0

      @media screen and (max-width desktopWidth)
        &:nth-child(4n+1)
          padding-left 15px

        &:nth-child(3n+1)
          padding-left 0

        @media screen and (max-width smalDesktopWidth)
          &:nth-child(2n+1)
            padding-left 0

          &:nth-child(3n+1)
            padding-left 15px

          &:nth-child(6n+1)
            padding-left 0

          @media screen and (max-width tableWidth)
            padding-left 0!important

  &__btn
    display flex
    justify-content center
    margin-top 30px

.result__product-item .ticket
  @media screen and (max-width desktopWidth)
    max-width 293px

    @media screen and (max-width smalDesktopWidth)
      max-width 351px
      width 100%
      height 100%

      @media screen and (max-width tableWidth)
        max-width 430px



.preloader {
  min-height: 100%;
  content: '';
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, .9);
  height: 100%;
  width: 100%;
  display: block !important;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  }

.sk-wandering-cubes {
  width: 20px;
  height: 20px;
  position: fixed;
  left calc(50% - 25px)
  top calc(50% - 25px)
  margin: auto;
}


.sk-wandering-cubes .sk-cube {
  background-color: greenDG;
  width: 1em;
  height: 1em;
  position: absolute;
  top: 0;
  left: 0;
  animation: sk-wandering-cubes 1.8s ease-in-out -1.8s infinite both;
}
.sk-wandering-cubes .sk-cube-2 {
  animation-delay: -0.9s;
}
@keyframes sk-wandering-cubes {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: translateX(2em) rotate(-90deg) scale(0.5);
  }
  50% {
    /* Hack to make FF rotate in the right direction */
    transform: translateX(2em) translateY(2em) rotate(-179deg);
  }
  50.1% {
    transform: translateX(2em) translateY(2em) rotate(-180deg);
  }
  75% {
    transform: translateX(0) translateY(2em) rotate(-270deg) scale(0.5);
  }
  100% {
    transform: rotate(-360deg);
  }
}