.result
  &__filter
    padding-left 15px

    @media screen and (max-width bigPhoneWidth)
      padding-left 0

    &-a
      padding 0 15px
      color greyTextDGdark

      @media screen and (max-width bigPhoneWidth)
        padding 0 8px

      &-first
        @media screen and (max-width tableWidth)
          padding-left 0

      &:hover
        color blackTextDG

    &-span
      display none

      @media screen and (max-width tableWidth)
        display flex
        margin-top 5px


  &__product
    display flex
    flex-wrap wrap

    &-item
      @extend .products__teaser-item

      &:nth-child(4n+1)
        padding-left 0

      @media screen and (max-width desktopWidth)
        &:nth-child(4n+1)
          padding-left 15px

        &:nth-child(3n+1)
          padding-left 0

        @media screen and (max-width smalDesktopWidth)
          &:nth-child(2n+1)
            padding-left 0

          &:nth-child(3n+1)
            padding-left 15px

          &:nth-child(6n+1)
            padding-left 0

          @media screen and (max-width tableWidth)
            padding-left 0!important

  &__btn
    display flex
    justify-content center
    margin-top 30px

.result__product-item .ticket
  @media screen and (max-width desktopWidth)
    max-width 293px

    @media screen and (max-width smalDesktopWidth)
      max-width 351px
      width 100%
      height 100%

      @media screen and (max-width tableWidth)
        max-width 430px


.preloader {
  position: relative;
  min-height: 60px;
}

.preloader:before {
  content: '';
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, .9);
  height: 100%;
  width: 100%;
  display: block !important;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.preloader:after {
  content: '';
  position: absolute;
  z-index: 2;
  top: 50%;
  left: 50%;
  margin-left: -15px;
  margin-top: -15px;
  width: 30px;
  height: 30px;
  border: 4px rgba(0, 0, 0, .25) solid;
  border-top: 4px #1071b6 solid;
  border-radius: 50%;
  -webkit-animation: preloader .6s infinite linear;
  animation: preloader .6s infinite linear;
}

@-webkit-keyframes preloader {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(359deg);
    transform: rotate(359deg);
  }
}

@keyframes preloader {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(359deg);
    transform: rotate(359deg);
  }
}