.proof-pay
  @extend .checkout


  &__block
    @extend .checkout__points-item
    padding-bottom 0
    font-size initial

    &-title
      font-weight normal
      display block
      padding-bottom 20px

      &-a
        color: greenDG

    &-descr
      font-weight normal
      padding-bottom 30px



  &__box
    &-total
      &-btn
        @extend .btn-green
        margin-left 20px

        @media screen and (max-width bigPhoneWidth)
          width 100%
          margin-left 0

      &-a
        margin-left 10px

    &-border
      border-top 1px solid greyDGdark
      display flex
      height 88px
      justify-content space-between
      align-items center

      @media screen and (max-width bigPhoneWidth)
        flex-direction column
        justify-content space-evenly
        align-items flex-start

  &__my-orders
    padding 35px

    &-a
      color greenDG