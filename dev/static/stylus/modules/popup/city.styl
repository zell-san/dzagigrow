.city-you
  @extend .popup

  @media screen and (max-width smalDesktopWidth)
    right 50%

    @media screen and (max-width 600px)
      width 300px

      @media screen and (max-width bigPhoneWidth)
        width 200px

  &__text
    display flex
    font-size rem(24px)

    @media screen and (max-width bigPhoneWidth)
      font-size rem(14px)

    &-a
      font-weight bold
      padding-left 5px

  &__btn
    display flex
    padding-top 35px

    @media screen and (max-width 600px)
      flex-direction column
      align-items center
      padding-top 15px

    &-green
      width 125px
      margin-right 15px

      @media screen and (max-width 600px)
        margin-right 0
        margin-bottom 15px

.city-choice
  @extend .popup
  align-items baseline
  padding-left 38px
  padding-right 30px

  @media screen and (max-width smalDesktopWidth)
    right 50%

    @media screen and (max-width 600px)
      width 300px

      @media screen and (max-width bigPhoneWidth)
        width 200px
        padding 0 20px

  &__span
    font-size rem(24px)
    padding-bottom 10px

    @media screen and (max-width bigPhoneWidth)
      font-size rem(14px)

    &-small
      @media screen and (max-width bigPhoneWidth)
        font-size rem(12px)
        flex-wrap wrap

  &__search
    @extend .search-def
    max-width 330px
    padding-top 20px

    &-input
      @extend .search-def-input

      @media screen and (max-width 600px)
        width 70%